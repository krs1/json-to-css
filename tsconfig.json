{
  "compilerOptions": {
    "jsx": "react-jsx", 
    "target": "es2020", 
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "noImplicitAny": false,  
